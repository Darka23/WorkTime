<div class="center-row">
    <div class="login-box" style="margin-top:200px;">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary" style="border-top-color:#a890c0;">
            <div class="card-header text-center">
                <a class="h1"><b>Work</b>Time</a>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Потребителско име"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Парола"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-4 mt-2">
                            <button type="submit" class="btn btn-primary btn-block" style="background-color:#a890c0; border:none; width:170px;">Влез в профила си</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <p class="mb-0 mt-3">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center custom-link">Регистрирай се като нов потребител</a>
                </p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
