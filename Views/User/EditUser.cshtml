@using WorkTime.Data.Identity
@model ApplicationUser

@{
    ViewData["Title"] = "Редактирай профила си";
}

<h1 class="center-row">Редактирай профила си</h1>

<div class="center-row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Снимка(линк)</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Имейл</label>
                <input asp-for="Email" class="form-control" placeholder="@Model.UserName" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Първо име</label>
                <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Фамилно име</label>
                <input asp-for="LastName" class="form-control" placeholder="@Model.LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Телефонен номер</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="@Model.PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">Работна позиция</label>
                <input asp-for="Position" class="form-control" placeholder="@Model.Position" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактирай" class="w-100 btn btn-primary" style="background-color:#a890c0; border:none;" />
                <a asp-action="UserList" class="btn btn-primary mt-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
