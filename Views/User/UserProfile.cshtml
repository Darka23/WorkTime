@using WorkTime.Data.Identity

@model ApplicationUser

<section class="content">
    <div class="container-fluid">
        <div class="center-row mt-5" >
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline" style="border-top-color: #a890c0;">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src=@Model.ImageUrl
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">@Model.FirstName @Model.LastName</h3>

                        <p class="text-muted text-center">@Model.UserName</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>E-mail</b> <a class="float-right">@Model.Email</a>
                            </li>
                            <li class="list-group-item">
                                <b>Телефонен номер</b> <a class="float-right">@Model.PhoneNumber</a>
                            </li>
                            <li class="list-group-item">
                                <b>Работна позиция</b> <a class="float-right">@Model.Position</a>
                            </li>
                        </ul>

                        <a asp-action="EditUser" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-primary btn-block" style="background-color:#a890c0; border:none;"><b>Редактирай профила си</b></a>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>