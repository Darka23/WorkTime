@model WorkTime.Data.Models.WorkTask

@{
    ViewData["Title"] = "Добави задача";
}

<h1 class="center-row mt-5">Добави задача</h1>

<div class="center-row">
    <div class="col-md-4">
        <form asp-action="AddWorkTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalHours" class="control-label">Общ брой нужни часове</label>
                <input asp-for="TotalHours" class="form-control" />
                <span asp-validation-for="TotalHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" style="background-color:#a890c0; border:none;"/>
                <a asp-action="Index" class="btn btn-primary">Обратно към главната страница</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

